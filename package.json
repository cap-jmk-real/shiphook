{
  "name": "shiphook",
  "version": "0.2.0",
  "description": "Ship on hook. Webhook-triggered deploy runner: POST → git pull → run your script. Configure via shiphook.yaml or env. Self-hosted for indie devs and micro-SaaS. No vendor lock-in.",
  "repository": {
    "type": "git",
    "url": "https://github.com/cap-jmk-real/shiphook.git"
  },
  "homepage": "https://github.com/cap-jmk-real/shiphook#readme",
  "bugs": {
    "url": "https://github.com/cap-jmk-real/shiphook/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "shiphook": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "shiphook.example.yaml"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "version:patch": "npm version patch -m \"chore: release %s\"",
    "version:minor": "npm version minor -m \"chore: release %s\"",
    "version:major": "npm version major -m \"chore: release %s\"",
    "ci:local": "node scripts/check-version-not-released.mjs && npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "webhook",
    "deploy",
    "deployment",
    "git",
    "pull",
    "indie",
    "micro-saas",
    "ci",
    "automation",
    "self-hosted"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "yaml": "^2.7"
  },
  "devDependencies": {
    "@types/node": "^22",
    "typescript": "^5.7",
    "vitest": "^2.1"
  }
}
